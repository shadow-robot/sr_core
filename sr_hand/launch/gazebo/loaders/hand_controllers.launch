<launch>
  <arg name="hand_prefix" default="rh" />
  <arg name="hand_serial" default="1234"/>
  <arg name="hand_controller_gazebo"
  default="$(find sr_description)/hand/config/$(arg hand_prefix)_controller_gazebo.yaml" />
  <arg name="hand_effort_controller_gazebo"
  default="$(find sr_description)/hand/config/$(arg hand_prefix)_effort_controller_gazebo.yaml" />
  <arg name="controller_spawner_timeout" default="60"/>
  <rosparam file="$(arg hand_controller_gazebo)" command="load" />
  <rosparam file="$(arg hand_effort_controller_gazebo)"
  command="load" />
  <group if="$(optenv ONE_FINGER 0)">
    <node name="spawn_gazebo_hand_controllers"
    pkg="controller_manager" type="spawner" respawn="false"
    output="screen"
    args="--shutdown-timeout=1.0 --timeout=$(arg controller_spawner_timeout) sh_mfj0_position_controller sh_mfj3_position_controller sh_mfj4_position_controller" />
  </group>
  <group unless="$(optenv ONE_FINGER 0)">
    <group if="$(optenv THREE_FINGER 0)">
      <node name="spawn_gazebo_hand_controllers"
      pkg="controller_manager" type="spawner" respawn="false"
      output="screen"
      args="--shutdown-timeout=1.0 --timeout=$(arg controller_spawner_timeout) sh_$(arg hand_prefix)_ffj0_position_controller sh_$(arg hand_prefix)_ffj3_position_controller sh_$(arg hand_prefix)_ffj4_position_controller sh_$(arg hand_prefix)_rfj0_position_controller sh_$(arg hand_prefix)_rfj3_position_controller sh_$(arg hand_prefix)_rfj4_position_controller sh_$(arg hand_prefix)_thj1_position_controller sh_$(arg hand_prefix)_thj2_position_controller sh_$(arg hand_prefix)_thj3_position_controller sh_$(arg hand_prefix)thj4_position_controller sh_$(arg hand_prefix)_thj5_position_controller sh_$(arg hand_prefix)_wrj1_position_controller sh_$(arg hand_prefix)_wrj2_position_controller" />
    </group>
    <group unless="$(optenv THREE_FINGER 0)">
      <node name="spawn_gazebo_hand_controllers"
      pkg="controller_manager" type="spawner" respawn="false"
      output="screen"
      args="--shutdown-timeout=1.0 --timeout=$(arg controller_spawner_timeout) sh_$(arg hand_prefix)_ffj0_position_controller sh_$(arg hand_prefix)_ffj3_position_controller sh_$(arg hand_prefix)_ffj4_position_controller sh_$(arg hand_prefix)_mfj0_position_controller sh_$(arg hand_prefix)_mfj3_position_controller sh_$(arg hand_prefix)_mfj4_position_controller sh_$(arg hand_prefix)_rfj0_position_controller sh_$(arg hand_prefix)_rfj3_position_controller sh_$(arg hand_prefix)_rfj4_position_controller sh_$(arg hand_prefix)_lfj0_position_controller sh_$(arg hand_prefix)_lfj3_position_controller sh_$(arg hand_prefix)_lfj4_position_controller sh_$(arg hand_prefix)_lfj5_position_controller sh_$(arg hand_prefix)_thj1_position_controller sh_$(arg hand_prefix)_thj2_position_controller sh_$(arg hand_prefix)_thj3_position_controller sh_$(arg hand_prefix)_thj4_position_controller sh_$(arg hand_prefix)_thj5_position_controller sh_$(arg hand_prefix)_wrj1_position_controller sh_$(arg hand_prefix)_wrj2_position_controller" />
    </group>
  </group>
</launch>
